<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".profile.ProfileEditorActivity">

    <include
        android:id="@+id/top_bar"
        layout="@layout/edit_profile_top_bar"/>

    <TextView
        android:id="@+id/edit_field_name"
        android:layout_marginStart="5dp"
        android:layout_below="@id/top_bar"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_field_name"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/grey_border">

        <ImageView
            android:id="@+id/edit_thumbnail"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edit_field_value"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="wrap_content"/>
    </LinearLayout>

