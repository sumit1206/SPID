<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="230dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/padding10"
    android:elevation="@dimen/text_padding5"
    android:outlineSpotShadowColor="@color/colorPrimary"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_border">

    <LinearLayout
        android:id="@+id/layout_nearby_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_shop_delivery"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/shop_delivery"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewColor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/card_bg_color">
        <TextView
            android:id="@+id/shop_name_nearest_shop_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redmango wheeler shop"
            android:textColor="@color/text_color_light"
            android:textStyle="bold"
            android:textSize="@dimen/small_text"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rating_shop_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:textColor="@color/text_color_light" />

            <androidx.appcompat.widget.AppCompatRatingBar
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/yellow"
                android:rating="4.7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="(51)"
                android:textColor="@color/text_color_light" />

            <TextView
                android:id="@+id/distance_nearest_shop_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="2km"
                android:textColor="@color/text_color_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="@dimen/text_padding5">
            <TextView
                android:id="@+id/shop_type_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book store."
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/twelvetext"
                android:maxLines="1"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp" />

            <TextView
            android:id="@+id/shop_address_nearest_shop_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Near, kausambi metro "
            android:maxLength="@integer/google_play_services_version"
                android:maxLines="1"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/twelvetext"
            android:layout_marginTop="2dp" />
        </LinearLayout>

            <TextView
                android:id="@+id/shop_activity_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/twelvetext"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="@dimen/text_padding5"
                android:layout_marginBottom="@dimen/text_padding5"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/get_direction_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Direction"
                    android:paddingStart="@dimen/text_padding5"
                    android:paddingEnd="@dimen/text_padding5"
                    android:drawablePadding="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_text_background"
                    android:layout_marginStart="@dimen/text_padding5"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:drawableStart="@drawable/directions"
                    android:drawableTint="@color/white"
                    android:textSize="@dimen/small_text"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/call_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Call"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/call"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:paddingStart="@dimen/text_padding5"
                    android:paddingEnd="@dimen/text_padding5"
                    android:background="@drawable/round_text_background"
                    android:maxLength="@integer/google_play_services_version"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>