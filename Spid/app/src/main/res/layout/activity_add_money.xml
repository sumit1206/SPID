<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".wallet.AddMoney">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/app_bar"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Money to"
            android:textSize="@dimen/small_text"
            android:textColor="@color/text_color_light"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="@dimen/text_padding5"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPID Wallet"
            android:layout_marginTop="@dimen/text_padding5"
            android:textSize="@dimen/mid_text"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="@dimen/text_padding5" />

        <TextView
            android:id="@+id/add_money_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10"
            android:textSize="@dimen/mid_text"
            android:textColor="@color/text_color_light"
            android:layout_marginStart="@dimen/text_padding5"
            android:drawableEnd="@drawable/wallet"
            android:drawableTint="@color/colorPrimary"
            android:layout_marginEnd="10dp"/>

    <EditText
        android:id="@+id/add_money_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/amount_rupees_symbol"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_bg"
        android:textSize="40dp"
        android:inputType="number"
        android:textColorHint="@color/grey"
        android:gravity="center"
        android:paddingStart="@dimen/padding10"/>




    <Button
        android:id="@+id/add_money_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_bg"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center"
        android:textSize="@dimen/large_text"
        android:layout_marginTop="@dimen/large_text"
        android:text="add"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum \u20B9 1"
            android:gravity="center"
            android:layout_marginTop="@dimen/large_text"
            android:textSize="@dimen/mid_text"
            android:textColor="@color/text_color_light"
            android:layout_marginStart="@dimen/text_padding5"
            android:layout_marginEnd="10dp"/>
</LinearLayout>
</LinearLayout>