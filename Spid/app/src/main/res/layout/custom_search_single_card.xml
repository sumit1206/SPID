<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="2dp">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/white_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">

                <TextView
                 android:id="@+id/from_address_search"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Howrah"
                 android:gravity="bottom"
                 android:textColor="@color/black"
                 android:textSize="@dimen/small_text"
                 android:layout_gravity="end|bottom"
                 android:padding="@dimen/text_padding"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/signpost"
                android:layout_gravity="top"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/icon_color"
                android:layout_marginStart="10dp" />


                <TextView
                    android:id="@+id/to_address_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delhi"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text"
                    android:layout_gravity="end|bottom"
                    android:padding="@dimen/text_padding"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/rupees_symbol"
                        android:gravity="end"
                        android:paddingStart="5dp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="10dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/mid_text"/>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="5dp">


                <TextView
                    android:id="@+id/expected_time_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="With in 24 hrs"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:paddingBottom="10dp"
                    android:drawableStart="@drawable/time"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text"
                    android:layout_gravity="end|bottom"
                    android:padding="@dimen/text_padding"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom"
                    android:background="@color/icon_color"/>

                <TextView
                    android:id="@+id/drop_time_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Howrah"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:paddingBottom="10dp"
                    android:drawableStart="@drawable/drop_location"
                    android:drawableTint="@color/icon_color"
                    android:gravity="start"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mid_text"
                    android:layout_gravity="end|bottom"
                    android:padding="@dimen/text_padding"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/search_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fast_delivery_search"
        app:layout_constraintEnd_toStartOf="@+id/container"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toTopOf="@+id/container" />
</androidx.constraintlayout.widget.ConstraintLayout>

