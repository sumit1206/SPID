<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="30dp"
    android:elevation="@dimen/text_padding5"
    android:layout_marginTop="@dimen/text_padding5"
    android:layout_marginBottom="@dimen/text_padding5"
    android:layout_marginStart="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="@dimen/text_padding5"
        android:paddingStart="@dimen/padding10"
        android:paddingTop="5dp"
        android:paddingBottom="@dimen/text_padding5"
        android:paddingEnd="@dimen/padding10"
        android:background="#F6F4F4">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q:"
            android:textSize="@dimen/small_text"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/text_padding"/>

        <TextView
            android:id="@+id/people_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="How much security in my parcel?"
            android:layout_weight="1"
            android:textSize="@dimen/small_text"
            android:textColor="@color/text_color_light"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/text_padding"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ans:"
                android:textSize="@dimen/small_text"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/people_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good"
                android:layout_weight="1"
                android:textSize="@dimen/small_text"
                android:textColor="@color/text_color_light"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>