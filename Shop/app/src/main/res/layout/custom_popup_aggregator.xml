<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="380dp"
    android:background="@null"
    android:layout_gravity="center">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@color/card_bg_color"
        android:layout_gravity="center">


    <LinearLayout
        android:id="@+id/popup_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/my_delivery"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Delivery Request"
            android:textStyle="bold"
            android:textSize="@dimen/mid_text"
            android:textColor="@color/text_color_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="@dimen/text_padding5"
            android:layout_marginStart="@dimen/text_padding5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_from_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/location"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:textColor="@color/text_color_light"/>

            <TextView
                android:id="@+id/dialog_to_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/pin_drop_location"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/text_color_light"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="330dp"
        android:background="@null">

        <TextView
            android:id="@+id/dialog_accept"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/accept"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="@dimen/mid_text"
            android:textColor="@color/white"
            android:padding="@dimen/text_padding5"
            android:backgroundTint="@color/green_color"
            android:background="@drawable/accept_button"/>

        <TextView
            android:id="@+id/dialog_reject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/decline"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="@dimen/mid_text"
            android:textColor="@color/white"
            android:backgroundTint="@color/red_color"
            android:padding="@dimen/text_padding5"
            android:background="@drawable/accept_button"/>
    </LinearLayout>

</RelativeLayout>